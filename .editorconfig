https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 8
end_of_line = crlf
charset = latin1
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
