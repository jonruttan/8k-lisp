;8KLISP.DEF
;860624 ALEX

	.Z80

DEBUG	EQU 0

HIFSUBR	EQU 13H			;MIN HIGH ADDRESS OF FSUBR'S
HIHEAP	EQU 18H			;HIGH ADDRESS OF START OF HEAP
NIL		EQU	0011H		;NIL DATA TYPE
EOFCHR	EQU 26			;END OF FILE CHAR
MAXLST	EQU	10000		;MAXIMUM LIST SIZE
MAXSYM	EQU 114			;MAXIMUM SYMBOL NAME LENGTH
MAXNUM	EQU 121			;MAXIMUM NUMBER SIZE
LLEN	EQU 126			;LINE LENGTH
LBUF	EQU 80H			;LINE BUFFER
DFLTF	EQU	05AH		;DEFAULT FILE
SAFETY	EQU 512			;SAFETY SPACE BETWEEN HEAP AND STACK
GAIN	EQU 1024		;MINIMUM GAIN AFTER GARBAGE COLLECTION
FILSIZ	EQU 1+1+36+128	;FILE STRUCT: FLAG, COUNT, FCB, BUFFER

POPLIST MACRO
	RST 08H
	ENDM

FETCH MACRO
	RST 18H
	ENDM

CPDE MACRO
	RST 20H
	ENDM

CPBC MACRO
	RST 28H
	ENDM

PRINT MACRO STRING
	CALL PR$PC
	DC STRING
	ENDM

MSG MACRO STRING
	CALL MSG$PC
	DC STRING
	ENDM

ERROR MACRO STRING
	CALL ERR
	DC STRING
	ENDM

BDOS MACRO N
	LD C,N
	CALL 5
	ENDM
